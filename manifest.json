{
    "name": "Wii Shop Theme for itch",
    "version": "0.1",
    "description": "Autoplays the Wii Shop theme while browsing itch.io",
    "permissions": [
        "tabs",
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon_16.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png",
            "256": "images/icon_256.png"
        }
    },
    "icons": {
        "16": "images/icon_16.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png",
        "256": "images/icon_256.png"
    },
    "manifest_version": 2
}
